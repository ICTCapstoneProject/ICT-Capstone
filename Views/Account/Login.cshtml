@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <style>
        body {
            background-color: white;
            font-family: 'Segoe UI', sans-serif;
        }
        .login-card {
            max-width: 400px;
            margin: 100px auto;
            padding: 30px;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        .login-title {
            font-weight: bold;
            font-size: 24px;
        }
        .subtext {
            color: #666;
            margin-bottom: 20px;
        }
        .form-control {
            border-radius: 8px;
        }
        .btn-login {
            background-color: #1f2937;
            color: white;
            width: 100%;
        }
        .btn-register {
            background-color: #e5e7eb;
            color: #111827;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
    <div class="position-relative" style="min-height: 90px;">
        <img src="~/uploads/loginbanner.png" 
             class="login-banner-bg" 
             alt="Login Banner" 
             style="
                position: absolute; 
                left: 50%; 
                top: 50%; 
                width: 190%; 
                max-width: none; 
                opacity: 0.08; 
                transform: translate(-50%, -50%) rotate(-17deg) scale(1.2);
                pointer-events: none; 
                z-index: 0;"
        />
        <h2 class="login-title position-relative" style="z-index: 2;">FORENSIC<br />SCIENCE SA</h2>
    </div>
    <p class="subtext">Sign in to your account</p>


        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger border border-danger rounded p-3 mb-4">
                <strong>There was a problem</strong><br />
                @ViewBag.ErrorMessage
            </div>
            
        }


        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="mb-3 text-start">
                <label>Email address</label>
                <input type="email" class="form-control" name="email" placeholder="name@xxxxx" value="@ViewBag.Email"/>
            </div>
            <div class="mb-3 text-start">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter your password" />
            </div>
            <button type="submit" class="btn btn-login mb-3">Sign in</button>
        </form>

    </div>
</body>
</html>
