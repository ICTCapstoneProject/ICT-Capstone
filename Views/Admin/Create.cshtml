@model FSSA.Models.UserCreateViewModel

@{
    ViewData["Title"] = "Create User";
}

<h1 class="mb-4">Create a New User</h1>

<div class="card shadow border-0">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-1">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g, Guest User"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <small class="text-muted d-block mb-3">
                What is This User's Name?
            </small>

            <div class="mb-1">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="e.g, Guest@example.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <small class="text-muted d-block mb-3">
                What is This User's Email?
            </small>


            <div class="mb-1">
                <label asp-for="PasswordHash" class="form-label">Password</label>
                <input asp-for="PasswordHash" class="form-control" type="password" placeholder="e.g, SecurePassword123"/>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <small class="text-muted d-block mb-3">
                What is This User's Password Going to Be?
            </small>


            <div class="mb-1">
                <label asp-for="SelectedRoles" class="form-label">Assign Roles</label>
                <select asp-for="SelectedRoles" class="form-select" multiple asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="SelectedRoles" class="text-danger"></span>
            </div>
            <small class="text-muted d-block mb-3">
                Tap on a Role From the Above Menu to Assign it to This User
            </small>

            <div class="mb-1">
                <label asp-for="AdminConfirmation" class="form-label">Admin Override Confirmation</label>
                <input asp-for="AdminConfirmation" class="form-control" placeholder="Type 'AdminPrivileges' to authorize" />
                <span asp-validation-for="AdminConfirmation" class="text-danger"></span>
            </div>
            <small class="text-muted d-block mb-3">
                This is a protected operation. To proceed, type <strong>AdminPrivileges</strong> to confirm.
            </small>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}