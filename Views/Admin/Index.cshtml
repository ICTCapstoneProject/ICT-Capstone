@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "User Management";
}

<div class="alert alert-primary border-primary-subtle bg-primary bg-opacity-10 text-dark rounded-3 mb-4" role="alert" style="font-size:1.13em;">
    Managing Accounts...

    <hr class="my-2" />
    <span class="d-block small text-muted mb-1">
        Tap on the <strong>Create...</strong> button to <strong>create</strong> accounts.
    </span>
    <span class="d-block small text-muted mb-1">
        Tap on the <strong>White Pencil</strong> button to <strong>modify</strong> accounts.
    </span>
    <span class="d-block small text-muted">
        Tap on the <strong>Yellow Bin</strong> button to <strong>delete</strong> accounts.
    </span>
</div>

<h1 class="mb-4">User Management Suite</h1>

<div class="card shadow border-0 mb-3">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-semibold">Account Modifications & Resets</h5>
        <a asp-action="Create" class="btn btn-dark">
            <i class="bi-person-lines-fill"></i> Create...
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive" style="max-height: 360px; overflow-y: auto; min-height: 400px ;">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light sticky-top" style="top: 0; z-index: 2;">
                    <tr class="text-muted small text-uppercase">
                        <th scope="col">Account #</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Roles</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-semibold"><strong>#@user.UserId</strong></td>
                            <td>@user.Name</td>
                            <td class="text-muted">@user.Email</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span>@role</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-dark" title="Edit User">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-warning" title="Delete User">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
