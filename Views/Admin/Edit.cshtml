@model FSSA.Models.UserEditViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h1 class="mb-4">Edit User</h1>

<div class="card shadow border-0">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="ExistingPasswordHash" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Guest User" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="e.g. guest@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label">Password</label>
                <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Leave blank to keep current password" />
                <span class="form-text">Leave blank if you do not wish to change the password. Otherwise, type to set a new one.</span>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <div class="mb-3" style="overflow-y: auto;">
                <label asp-for="SelectedRoles" class="form-label">Roles</label>
                <select asp-for="SelectedRoles" class="form-select" multiple asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="SelectedRoles" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AdminConfirmation" class="form-label">Admin Override Confirmation</label>
                <input asp-for="AdminConfirmation" class="form-control" placeholder="Type 'AdminPrivileges' to authorize" />
                <div class="form-text text-muted">
                    This is a protected operation. To proceed, type <strong>AdminPrivileges</strong> to confirm changes.
                </div>
                <span asp-validation-for="AdminConfirmation" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
