@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectManagerMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectManagerMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <style>
        
    </style>

    <div class="wrapper">
        <nav class="sidebar">
            <div class="p-3 d-flex align-items-center">
                <i class="bi bi-kanban-fill fs-4 me-2"></i>
                <span class="fs-5 fw-bold">ProjectManagerMvc</span>
            </div>
            <ul class="nav flex-column px-3">
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Index" && currentController == "Home" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Search" && currentController == "Proposal" ? "active" : "")"
                       asp-area="" asp-controller="Proposal" asp-action="Search">
                        <i class="bi bi-folder"></i> Proposal Lookup
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Create" && currentController == "Proposal" ? "active" : "")"
                       asp-area="" asp-controller="Proposal" asp-action="Create">
                        <i class="bi bi-pencil-square"></i> Proposal Creation
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Admin" ? "active" : "")"
                           asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-people"></i> Admin Panel
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link @(currentAction == "Privacy" && currentController == "Home" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-lock"></i> Privacy
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                        <button type="submit" class="nav-link btn btn-link text-start text-danger ps-3" style="width: 100%;">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <div class="main-content">
            <main role="main">
                @RenderBody()
            </main>
            <footer class="footer mt-auto">
                <div class="container text-center">
                    &copy; 2025 - ProjectManagerMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
