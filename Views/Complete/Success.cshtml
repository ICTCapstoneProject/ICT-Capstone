@model FSSA.Models.MyProposalViewModel
@{
    ViewData["Title"] = "Proposal Marked Complete";
}

<div class="alert alert-success border-success-subtle bg-success bg-opacity-10 text-dark rounded-3 mt-5 mb-4 shadow" role="alert" style="font-size:1.15em;">
    <i class="bi bi-check2-circle text-success me-2"></i>
    Proposal <strong>#@Model.Id</strong>
    <span class="fst-italic">'@Model.Title'</span> has been <strong>successfully marked as Complete</strong>.<br>
    It is now archived under <strong>Complete</strong> in the <strong>Proposal Lookup</strong> for record-keeping and future reporting.
</div>

<div class="d-flex gap-2 justify-content-center mb-5">
    <a asp-controller="Complete" asp-action="Index" class="btn btn-dark shadow px-3 py-2 d-inline-flex align-items-center gap-2">
        <i class="bi bi-arrow-left"></i>
        Back to Completion Backlog
    </a>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary shadow px-3 py-2 d-inline-flex align-items-center gap-2">
        <i class="bi bi-house-door"></i>
        Return to Dashboard
    </a>
</div>
