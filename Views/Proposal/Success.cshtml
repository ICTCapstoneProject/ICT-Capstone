@model FSSA.Models.Proposal
@{
    ViewData["Title"] = "Submission Successful";
    string submitterName = ViewBag.SubmitterName ?? "Unknown";
    string levelName = ViewBag.LevelName ?? "Unknown";
    string methodImagePath = ViewBag.MethodAttachmentPath as string;
    var financialResources = ViewBag.FinancialResources as List<FSSA.DTOs.FinancialResourceDto> ?? new();
}

<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Submission Successful</h4>
    <p class="mb-0">Proposal <strong>@Model.Id</strong>, <em>"@Model.Title"</em> was successfully created by <strong>@submitterName</strong>.</p>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0">Proposal Summary</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Title:</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Synopsis:</dt>
            <dd class="col-sm-8">@Model.Synopsis</dd>

            <dt class="col-sm-4">Method:</dt>
            <dd class="col-sm-8">@Model.Method</dd>

            @if (!string.IsNullOrEmpty(methodImagePath))
            {
                <dt class="col-sm-4">Method Image:</dt>
                <dd class="col-sm-8">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#methodImageModal" class="text-decoration-underline text-primary">
                        @System.IO.Path.GetFileName(methodImagePath)
                    </a>

                    <div class="modal fade" id="methodImageModal" tabindex="-1" aria-labelledby="methodImageModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content border-0 shadow-lg">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="methodImageModalLabel">Method Image</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-center">
                                    <img src="@methodImagePath" alt="Method Image" class="img-fluid rounded" style="max-width: 100%; max-height: 500px; object-fit: contain;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </dd>
            }

            <dt class="col-sm-4">Project Level:</dt>
            <dd class="col-sm-8">@levelName</dd>

            <dt class="col-sm-4">Physical Resources:</dt>
            <dd class="col-sm-8">@Model.PhysicalResources</dd>

            <dt class="col-sm-4">Financial Resources:</dt>
            <dd class="col-sm-8">
                @if (financialResources.Any())
                {
                    <ul>
                        @foreach (var fr in financialResources)
                        {
                            <li>@fr.Title - @fr.Cost.ToString("C")</li>
                        }
                    </ul>
                }
                else
                {
                    <span>(None listed)</span>
                }
            </dd>

            <dt class="col-sm-4">Ethical Considerations:</dt>
            <dd class="col-sm-8">@Model.EthicalConsiderations</dd>

            <dt class="col-sm-4">Outcomes:</dt>
            <dd class="col-sm-8">@Model.Outcomes</dd>

            <dt class="col-sm-4">Milestones:</dt>
            <dd class="col-sm-8">@Model.Milestones</dd>

            <dt class="col-sm-4">Estimated Completion:</dt>
            <dd class="col-sm-8">@Model.EstimatedCompletionDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Submitted By:</dt>
            <dd class="col-sm-8">@submitterName</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-dark">Return to Dashboard</a>
</div>
